<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--App labels text appearance-->
    <style name="AppLabelsTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">@font/praxis_lt_pro_regular</item>
    </style>

    <style name="InputTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/_34ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">@font/praxis_lt_pro_regular</item>
    </style>

</resources>
